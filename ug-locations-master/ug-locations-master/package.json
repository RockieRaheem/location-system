{
  "name": "ug-locations",
  "version": "1.2.1",
  "description": "A fast, intelligent library for searching Uganda's administrative units with fuzzy matching and full hierarchy lookup",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:types": "tsc -p tsconfig.build.json",
    "build:js": "bun build ./src/index.ts --outdir ./dist --target=bun",
    "build:cjs": "bun build ./src/index.ts --outdir ./dist --target=node --outfile=dist/index.cjs",
    "copy:data": "cpy ./src/data-optimized.json ./dist/",
    "build": "npm run build:types && npm run build:js && npm run build:cjs && npm run copy:data",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "uganda",
    "locations",
    "districts",
    "subcounties",
    "parishes",
    "villages",
    "hierarchy",
    "fuzzy-search",
    "africa"
  ],
  "author": "Natumanya Guy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NatumanyaGuy/ug-locations"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "typescript": "^5.5.0"
  },
  "dependencies": {
    "cpy-cli": "^6.0.0"
  }
}
